{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "spec/**/*"
  ]
}